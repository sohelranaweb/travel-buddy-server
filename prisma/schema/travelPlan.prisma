// TRAVEL PLAN MODEL
model TravelPlan {
        id          String     @id @default(uuid())
        travelerId  String
        destination String
        startDate   DateTime
        endDate     DateTime
        budgetMin   Float?
        budgetMax   Float?
        travelType  TravelType
        description String?
        isCompleted Boolean    @default(false)
        createdAt   DateTime   @default(now())
        updatedAt   DateTime   @updatedAt

        // Relations
        traveler      Traveler             @relation(fields: [travelerId], references: [id], onDelete: Cascade)
        buddyRequests TravelBuddyRequest[]
        travelBuddies TravelBuddy[]

        @@index([travelerId])
        @@index([destination])
        @@index([isCompleted])
        @@map("travel_plans")
}
